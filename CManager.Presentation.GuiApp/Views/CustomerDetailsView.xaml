<UserControl x:Class="CManager.Presentation.GuiApp.Views.CustomerDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CManager.Presentation.GuiApp.Views"
             xmlns:viewmodels="clr-namespace:CManager.Presentation.GuiApp.ViewModels"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodels:CustomerDetailsViewModel}"
             d:DesignHeight="700" d:DesignWidth="400">
    
    
    <Grid Margin="15">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>

        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" 
                   Text="Details" FontSize="20"
                   Foreground="LightGray" 
                   HorizontalAlignment="Center"/>

            <StackPanel Grid.Row="1" Margin="0 20 0 0">
                <TextBlock Text="Name" FontSize="14" FontWeight="Bold" Foreground="Gray" Margin="0,15,0,10"/>
                <TextBlock Text="{Binding SelectedCustomer.FirstName}" 
                           Foreground="LightGray" FontSize="14" Margin="0,0,0,2"/>
            <TextBlock Text="{Binding SelectedCustomer.LastName}" 
                           Foreground="LightGray" FontSize="14" Margin="0,0,0,10"/>

            <TextBlock Text="E-mail" FontSize="14" FontWeight="Bold" Foreground="Gray" Margin="0,15,0,10"/>
                <TextBlock Text="{Binding SelectedCustomer.Email}" 
                           Foreground="LightGray"
                           Margin="0 0 0 10" Padding="5"/>

                <TextBlock Text="Telephone Number" FontSize="14" FontWeight="Bold" Foreground="Gray" Margin="0,15,0,10"/>
                <TextBlock Text="{Binding SelectedCustomer.Telephone}" 
                           Foreground="LightGray"
                           Margin="0 0 0 10" Padding="5"/>

                <TextBlock Text="Street Address" FontSize="14" FontWeight="Bold" Foreground="Gray" Margin="0,15,0,10"/>
                <TextBlock Text="{Binding SelectedCustomer.Addres.StreetAddres}" Margin="0 0 0 10" Padding="5"
                           Foreground="LightGray"/>

                <TextBlock Text="Postal Code" FontSize="14" FontWeight="Bold" Foreground="Gray" Margin="0,15,0,10"/>
                <TextBlock Text="{Binding SelectedCustomer.Addres.PostalCode}" 
                           Foreground="LightGray" Margin="0 0 0 10" Padding="5"/>

                <TextBlock Text="City" FontSize="14" FontWeight="Bold" Foreground="Gray" Margin="0,15,0,10"/>
                <TextBlock Text="{Binding SelectedCustomer.Addres.City}" 
                           Foreground="LightGray"
                           Margin="0 0 0 10" Padding="5"/>


            </StackPanel>
      
        <Button Grid.Row="2" 
                Content="&#xE830;" 
                FontFamily="Segoe MDL2 Assets" 
                HorizontalAlignment="Left"
                Style="{StaticResource IconBtn}"
                Padding="15,10"
                Command="{Binding DataContext.NavigateToCustomerListCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
    </Grid>
</UserControl>
