<UserControl x:Class="CManager.Presentation.GuiApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CManager.Presentation.GuiApp.Views"
             xmlns:viewmodels="clr-namespace:CManager.Presentation.GuiApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Image Source="/Resources/Gemini_Generated_Logo.png" Width="200" Margin="10"/>

       
            <Button Content="Show Customers" 
        Command="{Binding DataContext.NavigateToCustomerListCommand, RelativeSource={RelativeSource AncestorType=Window}}"
        Height="50" Width="150" Margin="10"/>

            
            <Button Content="Add Customer" 
        Command="{Binding DataContext.NavigateToCustomerAddCommand, RelativeSource={RelativeSource AncestorType=Window}}"
        Height="50" Width="150" Margin="10"/>


       </StackPanel>
   </Grid>
</UserControl>
