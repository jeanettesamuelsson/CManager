<UserControl x:Class="CManager.Presentation.GuiApp.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CManager.Presentation.GuiApp.Views"
             xmlns:viewmodels="clr-namespace:CManager.Presentation.GuiApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:HomeViewModel}"
             
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    <Border CornerRadius="0 0 25 25">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="/Resources/Gemini_Generated_Logo.png" Width="300" Margin="10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,40,0,0">
                    <Button Content="VIEW CUSTOMERS" 
                        Background="CornflowerBlue" 
                        Foreground="White"
                        Command="{Binding DataContext.NavigateToCustomerListCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        Height="50" Width="120" Margin="20"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        />

                <Button Content="ADD CUSTOMER" 
                        Background="CornflowerBlue" 
                        Foreground="White"
                        BorderBrush="AliceBlue"
                        BorderThickness="1"
                        Command="{Binding DataContext.NavigateToCustomerAddCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        Height="50" Width="120" Margin="20"/>
                    
                </StackPanel>


            </StackPanel>
        </Grid>
    </Border>
</UserControl>
