<UserControl x:Class="CManager.Presentation.GuiApp.Views.CustomerAddView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CManager.Presentation.GuiApp.Views"
             xmlns:viewmodels="clr-namespace:CManager.Presentation.GuiApp.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:CustomerAddViewModel}"

             
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Add Customer"
                   HorizontalAlignment="Center" FontSize="20"  Margin="0,0,0,20" Foreground="LightGray"/>

        
            <StackPanel Grid.Row="1" Margin="0,0,15,0">

            <!--Used AI (Gemini PRO) to design this form.-->

            <TextBlock Text="First Name" FontSize="14" Foreground="Gray" Margin="0,10,0,2"/>
                <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#CCC" Background="Transparent"/>

                <TextBlock Text="Last Name" FontSize="14" Foreground="Gray" Margin="0,15,0,2"/>
                <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#CCC" Background="Transparent"/>

                <TextBlock Text="E-mail" FontSize="14" Foreground="Gray" Margin="0,15,0,2"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#CCC" Background="Transparent"/>

                <TextBlock Text="Phone Number" FontSize="14" Foreground="Gray" Margin="0,15,0,2"/>
                <TextBox Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#CCC" Background="Transparent"/>

                <TextBlock Text="Street Address" FontSize="14" Foreground="Gray" Margin="0,25,0,2"/>
                <TextBox Text="{Binding StreetAddres, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#CCC" Background="Transparent"/>

                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Postal Code" FontSize="14" Foreground="Gray" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding PostalCode, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#CCC" Background="Transparent"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="City" FontSize="14" Foreground="Gray" Margin="0,0,0,2"/>
                        <TextBox Text="{Binding City, UpdateSourceTrigger=PropertyChanged}" Padding="8" BorderThickness="0,0,0,1" BorderBrush="#CCC" Background="Transparent"/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="CANCEL" 
                    Command="{Binding CancelCommand}" 
                    Padding="20,8" 
                    Margin="0,0,10,0" 
                    Background="Transparent" 
                    BorderThickness="0"
                    Foreground="Gray"/>

            <Button Content="SAVE" 
                    Command="{Binding SaveCommand}" 
                    Padding="30,10" 
                    Background="CornflowerBlue" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
    
</UserControl>
